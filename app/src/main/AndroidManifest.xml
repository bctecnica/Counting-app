<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bctecnica.countingapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/counting_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/counting_app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.bctecnica.countingapp.PopActivity"
            android:theme="@style/AppTheme.PopMe" />
        <activity android:name="com.bctecnica.countingapp.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>